<%= form_with(model: session_form, url: sessions_path, local: true) do |form| %>
  <%= render partial: 'common/error', locals: { model: session_form } %>

  <div class="grid-x">
    <div class="cell small-12 medium-6">
      <div class="field">
        <%= form.label :user_cd, t("activemodel.attributes.session_form.user_cd") %>
        <%= form.text_field :user_cd %>
      </div>

      <div class="actions">
        <%= form.submit t('view.app.login'), { class: 'button primary small' } %>
      </div>
    </div>
    <div class="cell auto">
    </div>
  </div>
<% end %>
